<div class="container text-center">
  <div class="row justify-content-center cards">

    <div class="col-12 card-pick">
      <% if @translator.photo.attached? %>
        <%= cl_image_tag @translator.photo.key, crop: :fill %>
        <% end %>

      <h4><%= @translator.user.name %></h4>
      <p>Languages: <%= @translator.languages %></p>
      <p>About: <%= @translator.description %></p>
      <p>Rate: $<%= @translator.rates %></p>
      <%= link_to "Book them", new_translator_booking_path(@translator), class: "btn btn-flat" %>
    </div>
  </div>
  <%= link_to 'Home', translators_path %>
</div>
