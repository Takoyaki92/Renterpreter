  <h2>There are no translators available at the present time</h2>
<% else %>
  <% @translators.each do |translator| %>
    <% if translator.user == current_user %>
    <% else %>
    <h2>Name: <%= translator.user.name %></h2>
    <h2>Languages: <%= translator.languages %></h2>
    <h2>Availability: <% if translator.availability?%>
    ã€‡
