<body class="wallpaper">
  <div class="container">
    <h1>Edit your page</h1>
    <div class="row justify-content-center">
      <div class="col-12">
        <%= simple_form_for @translator do |f| %>
          <%= f.input :languages %>
          <%= f.input :description %>
          <%= f.input :rates %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</body>
