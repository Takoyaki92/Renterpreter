<div class="container">
<!-- content -->
  <div class="main">
    <h1>Renterpreter</h1>
    <p>What do you need an interpreter for?</p>
  </div>

<!-- searchbar -->
  <div class="future-searchbar">
    <%= simple_form_for :search, url: translators_index_path, method: :get do |f| %>
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-primary">
        <i class="fas fa-search"></i> Search
      </button>
    <% end %>
  </div>
</div>

<!-- footer -->
<div class="footer">
  <div class="footer-links">
    <a href="https://github.com/Takoyaki92/Renterpreter/tree/master/app/views"><i class="fab fa-github"></i></a>
  </div>
